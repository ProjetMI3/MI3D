void nb_joueur(){
	Joueur* joueur;
    printf("Saisir le nombre de joueurs :\n");
    scanf("%d",&joueur.nb);
    while(joueur.nb <2 || joueur.nb > 8){
    	fprintf(stderr,"Erreur dans la saisie. Le nombre de joueurs doit être compris entre 2 et 8.\n");
    }
	for(int i = 0; i<joueur.nb ; i++){
    	printf("Saisir le prénom du joueur n°%d :\n",i+1);
        scanf("%s",joueur[i]->prenom);
